<UserControl
    x:Class="WpfTemplate.Views.MainRegion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:WpfTemplate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinHeight="300"
    d:DesignHeight="300"
    d:DesignWidth="300"
    lex:LocalizeDictionary.DesignCulture="ja"
    lex:ResxLocalizationProvider.DefaultAssembly="WpfTemplate"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    mc:Ignorable="d">
    <Grid>
        <TextBlock Text="{lex:Loc ShellMainRegionMessage}" />
        <iconPacks:PackIconModern
            Width="128"
            Height="128"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{DynamicResource AccentColorBrush4}"
            Kind="OsWindows8" />
    </Grid>
</UserControl>
