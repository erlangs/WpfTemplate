                      xmlns:vm="clr-namespace:WpfTemplate.ViewModels"
                      xmlns:lex="http://wpflocalizeextension.codeplex.com"
                      xmlns:local="clr-namespace:WpfTemplate"
                      d:DataContext="{d:DesignInstance {x:Type vm:MainWindowViewModel}}"
                      prism:ViewModelLocator.AutoWireViewModel="True"
                      mc:Ignorable="d"
                      lex:LocalizeDictionary.DesignCulture="ja-jp"
                      lex:ResxLocalizationProvider.DefaultAssembly="WpfTemplate"
                      lex:ResxLocalizationProvider.DefaultDictionary="Resources"
                      TitleCharacterCasing="Normal"
                      Title="MainWindow" 
                      Height="350" 
                      Width="525"
                      GlowBrush="{DynamicResource AccentColorBrush}"
